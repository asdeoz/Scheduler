@model SchedulerModels.Entities.Block

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    jQuery(function ($) {
        $("#startSunday").width(50);
        $("#startSunday").mask("99:99");
        $("#endSunday").mask("99:99");
        $("#startMonday").mask("99:99");
        $("#endMonday").mask("99:99");
        $("#startTuesday").mask("99:99");
        $("#endTuesday").mask("99:99");
        $("#startWednesday").mask("99:99");
        $("#endWednesday").mask("99:99");
        $("#startThursday").mask("99:99");
        $("#endThursday").mask("99:99");
        $("#startFriday").mask("99:99");
        $("#endFriday").mask("99:99");
        $("#startSaturday").mask("99:99");
        $("#endSaturday").mask("99:99");
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Block</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Teacher)
        </div>
        <div class="editor-field">
            @Html.DropDownList("teacherId", (IEnumerable<SelectListItem>) ViewData["Teacher_List"], "Select a teacher")
            @Html.ValidationMessageFor(model => model.Teacher)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Grade)
        </div>
        <div class="editor-field">
            @Html.DropDownList("gradeId", (IEnumerable<SelectListItem>) ViewData["Grade_List"], "Select a grade")
            @Html.ValidationMessageFor(model => model.Grade)
        </div>

        <div class="editor-label">
            @Html.Label("Schedule")
        </div>
        <div class="editor-field">
            <table>
                <tr>
                    <th></th>
                    <th>Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkSunday")</td>
                    <td>@Html.Label("Sunday")</td>
                    <td>@Html.TextBox("startSunday")</td>
                    <td>@Html.TextBox("endSunday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkMonday")</td>
                    <td>@Html.Label("Monday")</td>
                    <td>@Html.TextBox("startMonday")</td>
                    <td>@Html.TextBox("endMonday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkTuesday")</td>
                    <td>@Html.Label("Tuesday")</td>
                    <td>@Html.TextBox("startTuesday")</td>
                    <td>@Html.TextBox("endTuesday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkWednesday")</td>
                    <td>@Html.Label("Wednesday")</td>
                    <td>@Html.TextBox("startWednesday")</td>
                    <td>@Html.TextBox("endWednesday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkThursday")</td>
                    <td>@Html.Label("Thursday")</td>
                    <td>@Html.TextBox("startThursday")</td>
                    <td>@Html.TextBox("endThursday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkFriday")</td>
                    <td>@Html.Label("Friday")</td>
                    <td>@Html.TextBox("startFriday")</td>
                    <td>@Html.TextBox("endFriday")</td>
                </tr>
                <tr>
                    <td>@Html.CheckBox("chkSaturday")</td>
                    <td>@Html.Label("Saturday")</td>
                    <td>@Html.TextBox("startsaturday")</td>
                    <td>@Html.TextBox("endsaturday")</td>
                </tr>
            </table>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
